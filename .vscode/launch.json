{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Nest Framework (apps/api)",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start:debug"],
      "autoAttachChildProcesses": true,
      "restart": true,
      "sourceMaps": true,
      "stopOnEntry": false,
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/apps/api"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Next.js (apps/web)",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "autoAttachChildProcesses": true,
      "restart": true,
      "sourceMaps": true,
      "stopOnEntry": false,
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/apps/web"
    }
  ]
}
